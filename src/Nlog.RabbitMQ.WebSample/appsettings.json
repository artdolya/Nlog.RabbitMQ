{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "NLog": {
        "internalLogLevel": "Warn",
        "internalLogToConsole": true,
        "extensions": [
            { "assembly": "Nlog.RabbitMQ.Target" }
        ],
        "variables": {
            "rmqHost": "localhost",
            "rmqUser": "rmquser",
            "rmqPassword": "rmquser",
            "rmqvHost": "/"
        },
        "targets": {
            "console": {
                "type": "Console"
            },
            "rmq": {
                "type": "RabbitMQ",
                "username": "${rmqUser}",
                "password": "${rmqPassword}",
                "hostname": "${rmqHost}",
                "UseSsl": false,
                "exchange": "test-exchange",
                "port": 5672,
                "vhost": "${rmqvHost}",
                "useJSON": true,
                "includeGdc": false,
                "includeNdlc": false,
                "includeMdlc": false
            }
        },
        "rules": [
            {
                "logger": "*",
                "minLevel": "Info",
                "writeTo": "console"
            },
            {
                "minLevel": "Info",
                "writeTo": "rmq"
            }
        ]
    }
}
